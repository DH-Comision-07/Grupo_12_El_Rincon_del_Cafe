<!DOCTYPE html>
<html lang="es">

<head>

    <head>
        <%- include('../partials/head')%>
            <link rel="stylesheet" href="/css/products/products.css" />
            <title>Productos - El Rincón del Café</title>
    </head>
</head>

<body>

    <%- include('../partials/header')%>
        <main>
            <h1 class="title">NUESTROS PRODUCTOS</h1>
            <div class="container-desktop">
                <div class="container-responsive">
                    <section class="section-category">
                        <div class="container-products-category">
                            <a href="/products/category/Bebida">
                                <div class="container-category-desktop">
                                    <div class="container-category-imagen-bebida">
                                    </div>
                                    <h3 class="container-category-title">Bebida</h3>
                                </div>
                            </a>
                            <a href="/products/category/Café en Grano">
                                <div class="container-category-desktop">
                                    <div class="container-category-imagen-grano">
                                    </div>
                                    <h3 class="container-category-title">Café en grano</h3>
                                </div>
                            </a>
                            <a href="/products/category/Café Molido">
                                <div class="container-category-desktop">
                                    <div class="container-category-imagen-molido">
                                    </div>
                                    <h3 class="container-category-title">Café molido</h3>
                                </div>
                            </a>
                            <a href="/products/category/Café en Capsulas">
                                <div class="container-category-desktop">
                                    <div class="container-category-imagen-capsula">
                                    </div>
                                    <h3 class="container-category-title">Café en capsulas</h3>
                                </div>
                            </a>
                        </div>
                    </section>
                    <div class="search-bar">
                        <input class="search-bar-input" type="text" placeholder="Buscar productos"
                            name="terminosDeBusqueda" />
                        <button class="search-bar-button" type="submit">
                            <i class="fa-solid fa-magnifying-glass"></i>
                        </button>
                    </div>
                    <section class="section-cards">
                        <div class="container-cards">
                            <% products.forEach((product)=> { %>
                                <article class="card">
                                    <a href="/products/detail/<%= product.id %>">
                                        <img class="card-imagen" src="/images/products/<%= product.image %>"
                                            alt="imagen-producto">
                                        <div class="card-container-description">
                                            <p class="card-title">
                                                <%= product.name %>
                                            </p>
                                            <p class="card-price">$<%= product.price %>
                                            </p>
                                        </div>
                                    </a>
                                    <div class="card-add-cart">
                                        <button class="card-icon-edit">
                                            <i class="card-edit-admin fa-solid fa-pen-to-square"></i>
                                        </button>
                                        <button type="button" class="card-add-cart-text">Añadir al carrito</button>
                                    </div>
                                </article>
                                <% }); %>
                        </div>
                    </section>
                </div>
            </div>
            <section class="page-navigation">
                <div class="container-navigation">
                    <button type="button" class="button-prev"> Anterior
                    </button>

                    <a href="/">
                        <button type="button" class="button-return"> Volver
                        </button>
                    </a>
                    <button type="button" class="button-next"> Siguiente
                    </button>
                </div>
            </section>
        </main>
        <%- include('../partials/footer')%>

</body>

</html>